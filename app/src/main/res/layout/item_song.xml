<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_16sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:background="@drawable/bg_item_song"
    android:padding="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_second_item_song"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_16sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_music" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemSongName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="All Of Me"
                android:textColor="@color/text_high_light"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/itemSingleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Stevie Wonder"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>