<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.intro.fragment.ThirdIntroFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/image_intro_3"
        android:scaleType="centerCrop"
        android:layout_marginBottom="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn_piano"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintEnd_toEndOf="@id/image"
        android:layout_marginTop="35dp"
        android:textSize="18sp"

        android:textColor="@color/text_primary"
        android:id="@+id/textLearnPiano"
        android:elevation="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/and_more_musical_instrument"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textLearnPiano"
        app:layout_constraintStart_toStartOf="@id/textLearnPiano"
        app:layout_constraintEnd_toEndOf="@id/textLearnPiano"
        android:layout_marginTop="@dimen/_12sdp"
        android:textColor="@color/text_primary"

        android:elevation="10dp"/>

