<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_drume"
    tools:context=".screens.drum.DrumsetActivity">

    <ImageView
        android:id="@+id/imageSnare"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="33dp"
        android:src="@drawable/image_snare"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageKickRight"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/image_kick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageTom" />

    <ImageView
        android:id="@+id/imageKickLeft"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/image_kick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageTom" />

    <ImageView
        android:id="@+id/imageRealistic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/image_realistic"
        app:layout_constraintBottom_toBottomOf="@id/imageSnare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toEndOf="@id/imageKickRight" />

    <ImageView
        android:id="@+id/imageTom"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:src="@drawable/image_tom"
        app:layout_constraintBottom_toTopOf="@id/imageSnare"
        app:layout_constraintEnd_toEndOf="@id/imageSnare"
        app:layout_constraintStart_toStartOf="@id/imageSnare" />

    <ImageView
        android:id="@+id/imageFloorTomRight"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:src="@drawable/image_floor_tom"
        app:layout_constraintBottom_toBottomOf="@id/imageTom"
        app:layout_constraintStart_toEndOf="@id/imageSnare" />

    <ImageView
        android:id="@+id/imageFloorTomLeft"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:src="@drawable/image_floor_tom"
        app:layout_constraintBottom_toBottomOf="@id/imageTom"
        app:layout_constraintEnd_toStartOf="@id/imageSnare" />

    <ImageView
        android:id="@+id/imageDrumSmallLeft"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:src="@drawable/image_drum_small"
        app:layout_constraintBottom_toBottomOf="@id/imageFloorTomLeft"
        app:layout_constraintEnd_toStartOf="@+id/imageFloorTomLeft"
        app:layout_constraintStart_toEndOf="@id/imageFloorTomLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageFloorTomLeft" />

    <ImageView
        android:id="@+id/imageDrumSmallRight"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:src="@drawable/image_drum_small"
        app:layout_constraintBottom_toBottomOf="@+id/imageFloorTomRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageFloorTomRight"
        app:layout_constraintTop_toTopOf="@+id/imageFloorTomRight" />

    <ImageView
        android:id="@+id/imageDrumBigCenter"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:foregroundGravity="top"
        android:src="@drawable/image_drum_big_center"
        app:layout_constraintEnd_toEndOf="@id/imageTom"
        app:layout_constraintStart_toStartOf="@id/imageTom"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageDrumBigLeft"
        android:layout_width="202dp"
        android:layout_height="150dp"
        android:src="@drawable/image_drum_big"
        app:layout_constraintEnd_toStartOf="@id/imageTom"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageDrumBigRight"
        android:layout_width="202dp"
        android:layout_height="150dp"
        android:src="@drawable/image_drum_big"
        app:layout_constraintStart_toEndOf="@id/imageTom"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>