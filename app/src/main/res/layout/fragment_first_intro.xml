<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".screens.intro.fragment.FirstIntroFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_intro_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLearnPiano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"

        android:text="@string/learn_piano"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"

        android:text="@string/beginning_learn_piano"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/textLearnPiano"
        app:layout_constraintStart_toStartOf="@id/textLearnPiano"
        app:layout_constraintTop_toBottomOf="@id/textLearnPiano" />

</androidx.constraintlayout.widget.ConstraintLayout>