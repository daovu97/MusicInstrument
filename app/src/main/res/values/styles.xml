<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TabBarItemView">
        <attr name="tab_icon" format="integer" />
        <attr name="tab_text" format="string" />
        <attr name="tab_selected" format="boolean" />
    </declare-styleable>

    <declare-styleable name="HeaderView">
        <attr name="cs_title" format="reference" />
        <attr name="action_right_title" format="string" />
        <attr name="src_right" format="reference" />
        <attr name="src_left" format="reference" />
        <attr name="title_text_size" format="dimension" />
        <attr name="title_gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="right_action_type" format="enum">
            <enum name="none" value="0" />
            <enum name="image" value="1" />
            <enum name="text" value="2" />
        </attr>
        <attr name="left_action_type" format="enum">
            <enum name="none" value="0" />
            <enum name="image" value="1" />
            <enum name="text" value="2" />
        </attr>

    </declare-styleable>

    <style name="text_view_item_setting">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_language</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:includeFontPadding">false</item>
        <!--        <item name="android:drawableTint">@color/primaryColor</item>-->
    </style>

    <style name="TextViewMore">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/txt_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogTheme_transparent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="DialogTheme_transparent_34" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">#99000000</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>